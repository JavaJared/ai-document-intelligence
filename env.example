# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development  # development, staging, production

# OpenAI Configuration (Required for LLM functionality)
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=30

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
DEVICE=cpu  # cpu or cuda

# Vector Database Configuration
VECTOR_DB_PATH=data/vector_db/index
SIMILARITY_METRIC=cosine  # cosine, l2, ip
N_RETRIEVAL_RESULTS=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
CORS_ORIGINS=*

# AWS Configuration (Optional - for cloud deployment)
USE_AWS=False
AWS_REGION=us-east-1
S3_BUCKET=your-document-bucket
DYNAMODB_TABLE=your-metadata-table

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or console
